compute_force_bond:
      virial: false
      potentials_for_bonds:
         - *bond_CNO2_CNO2
         - *bond_CNO2_CNH2
         - *bond_CNH2_CNH2
         - *bond_CNO2_NO2
         - *bond_CNH2_NH2
         - *bond_NO2_O
         - *bond_NH2_H

compute_force_bend:
      virial: false
      potentials_for_angles:
         - *bend_CNO2_CNH2_CNO2
         - *bend_CNH2_CNO2_CNH2
         - *bend_CNO2_CNH2_NH2
         - *bend_CNH2_CNO2_NO2
         - *bend_CNO2_NO2_O
         - *bend_CNH2_NH2_H
         - *bend_O_NO2_O
         - *bend_H_NH2_H

compute_force_torsion:
      virial: false
      potentials_for_torsions:
         - *torsion_CNO2_CNH2_CNO2_CNH2
         - *torsion_CNO2_CNH2_CNO2_NO2
         - *torsion_CNH2_CNO2_CNH2_NH2
         - *torsion_NH2_CNH2_CNO2_NO2
         - *torsion_NO2_CNO2_CNH2_NH2
         - *torsion_H_NH2_CNH2_CNO2
         - *torsion_O_NO2_CNO2_CNH2

compute_force_improper:
      virial: false
      potentials_for_impropers:
         - *improper_CNO2_CNH2_CNH2_NO2
         - *improper_CNH2_CNO2_CNO2_NH2
         - *improper_NO2_CNO2_O_O
         - *improper_NH2_CNH2_H_H

compute_forces_potential:
  - compute_force_pair:
      symetric: true
      virial: false
      use_xform: true
      use_weights: true
      potentials:
        - *exp6_Cno2_Cno2
        - *exp6_Cnh2_Cnh2
        - *exp6_No2_No2
        - *exp6_Nh2_Nh2
        - *exp6_O_O
        - *exp6_H_H
        - *exp6_Cno2_Cnh2
        - *exp6_Cno2_No2
        - *exp6_Cno2_Nh2
        - *exp6_Cno2_O
        - *exp6_Cno2_H
        - *exp6_Cnh2_No2
        - *exp6_Cnh2_Nh2
        - *exp6_Cnh2_O
        - *exp6_Cnh2_H
        - *exp6_No2_Nh2
        - *exp6_No2_O
        - *exp6_No2_H
        - *exp6_Nh2_O
        - *exp6_Nh2_H
        - *exp6_O_H

grid_flavor: grid_flavor_full


input_data_xyz:
  - read_xyz_file:
     file: /home/chivotg/dev/C++/project/exaStamp/data/TEST_MOLECULES_TATB_Ghosts/chaine3.xyz
     #resize_factor: 2.0

domain:
  grid_dims: [1,1,1]
  #cell_size: 12.5 ang
  periodic: [true,true,true]

connectivity:
    connectivity_file: /home/chivotg/dev/C++/project/exaStamp/data/TEST_MOLECULES_TATB_Ghosts/connectivity.yml


# define actions to initialize particles at startup, just after file read
init_particles_start:
  - load_balance
  - migrate_cell_particles
  - load_balance_no_costs
  - migrate_cell_particles
  - rebuild_amr
  - backup_r
  - ghost_comm_scheme
  - ghost_update_all_no_fv
  - update_particle_neighbors

init_particles:
  - load_balance
  - migrate_cell_particles
  #- replicate_domain_for_molecules: { repeat: [1,1,2] }
  - load_balance_no_costs
  - migrate_cell_particles
  - rebuild_amr
  - backup_r
  - ghost_comm_scheme
  - ghost_update_all_no_fv
  - update_particle_neighbors


# define the verlet numerical scheme
numerical_scheme_verlet:
  body:
    - push_position_2nd_order: { dt_scale: 1.0 }
    - push_velocity_1st_order: { dt_scale: 0.5 }
    - ghost_update_r
    - zero_force_energy
    - id_map
    - zero_force_energy
    - compute_forces_potential
    #- compute_force_bond
    #- compute_force_bend
    #- compute_force_torsion
    #- compute_force_improper
    #- langevin_thermostat: { gamma: 1 1/ps , T: 5000 K }
    - push_velocity_1st_order: { dt_scale: 0.5 }

molecule_pair_weight:
  weight:
    TATB: [0.2,0.3,0.4,0.5]

write_vtk:
   is_binary: true
   compression: default
   is_box: true
   is_ghosts: true
   is_external_box: true

do_update_particles:
  condition: trigger_move_particles
  body:
    - trigger_load_balance
    - load_balancing_if_triggered
    - move_particles
    - migrate_cell_particles
    - rebuild_amr
    - backup_r
    - ghost_comm_scheme
    - ghost_update_all_no_fv
    - update_particle_neighbors
    - id_map
    - set_connectivity
    - reorganize_molecule_improper
    - molecule_pair_weight
    - debug_pair_weight

simulation:

  - global
  - domain
  - grid_flavor
  - species
  - input_data_xyz
  - nbh_dist
  - init_particles_start
  - init_molecule_from_yaml
  - init_particles
  - message: "--- starting calcul forces ---"
  - zero_force_energy
  - compute_forces_potential
  #- compute_force_bond
  #- compute_force_bend
  #- compute_force_torsion
  #- compute_force_improper
  - message: "--- ending calcul forces ---"
  #- shift_r: {shift: [1.4,0,0]}
  - write_vtk
  - message: "--- Initialization done ---"

  - compute_loop:
      loop: true
      condition: compute_loop_continue
      name: "*** Compute loop ***"
      body:
        - update_particles
        - numerical_scheme_verlet
        - write_vtk
        - end_iteration
        - compute_loop_stop


init_molecule_from_yaml:
  - connectivity
  #- connectivity_debug
  - id_map
  - set_connectivity
  - molecule_pair_weight
  - debug_pair_weight
  #- read_connectivity_debug
  - set_molecules_id
  - ghost_update_idmol
  - correct_molecules_id
  #- debug_print_ghosts
