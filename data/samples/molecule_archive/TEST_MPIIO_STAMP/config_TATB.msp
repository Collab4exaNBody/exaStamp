grid_flavor: grid_flavor_full


input_data_protection:
  - read_stamp:
        file: StampV4_exaStamp_000000000.MpiIO
        version: 4.1
        bounds_mode: DOMAIN
        enlarge_bounds: 0.0 nm
  - inverse_xform


domain:
  grid_dims: [10,10,10]
  #cell_size: 1 ang
  periodic: [true,true,true]


# define actions to initialize particles at startup, just after file read
init_particles_start:
  - load_balance
  - migrate_cell_particles
  #- replicate_domain: { repeat: [4,1,1] }
  - load_balance_no_costs
  - migrate_cell_particles
  - rebuild_amr
  - backup_r
  - ghost_comm_scheme
  - ghost_update_all_no_fv
  - ghost_update_idmol 
  - update_particle_neighbors
  - id_map
  - set_connectivity

init_particles:
  - load_balance
  - migrate_cell_particles
  #- replicate_domain_for_molecules: { repeat: [4,1,1] }
  - load_balance_no_costs
  - migrate_cell_particles
  - rebuild_amr
  - backup_r
  - ghost_comm_scheme
  - ghost_update_all_no_fv
  - update_particle_neighbors
  - id_map
  - set_connectivity


# define the verlet numerical scheme
numerical_scheme_verlet:
  body:
    - push_position_2nd_order_xform: { dt_scale: 1.0 }
    - push_velocity_1st_order: { dt_scale: 0.5 }
    - ghost_update_rv
    - zero_force_energy
    - compute_forces
    - compute_force_bond
    - compute_force_bend
    - compute_force_torsion
    - compute_force_improper
    #- langevin_thermostat: { gamma: 1 1/ps , T: 4000 K }
    - push_velocity_1st_order: { dt_scale: 0.5 }

write_vtk:
   is_binary: true
   compression: default
   is_box: true
   is_ghosts: true
   is_external_box: true

do_update_particles:
  condition: trigger_move_particles
  body:
    - trigger_load_balance
    - load_balancing_if_triggered
    - move_particles
    - migrate_cell_particles
    - rebuild_amr
    - backup_r
    - ghost_comm_scheme
    - ghost_update_all_no_fv
    - update_particle_neighbors
    - id_map
    - set_connectivity

simulation:

  - global
  - domain
  - grid_flavor
  - species
  - input_data_protection
  - nbh_dist
  - message: "--- Reading MPIIO done ---"
  - init_particles_start
  - reorganize_molecule_improper
  - message: "--- Molecules part done ---"
  - zero_force_energy
  - message: "--- zero forces done ---"
  - compute_forces
  - compute_force_bond
  #- message: "--- bonds forces done ---"
  - compute_force_bend
  - compute_force_torsion
  - compute_force_improper
  - write_vtk
  - message: "--- Initialization done ---"

  - compute_loop:
      loop: true
      condition: compute_loop_continue
      name: "*** Compute loop ***"
      body:
        - update_particles
        - numerical_scheme_verlet
        - write_vtk
        - end_iteration
        - compute_loop_stop


  #- correct_molecules_id
