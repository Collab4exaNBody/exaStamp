# override parameters with command line options :
# -----------------------------------------------
#
# exaStamp  molecule_dump_to_stampv4.msp --set-global-inputfile molecule.dump --set-global-outputfile molecule.StampV4
#

global:
  ghost_dist: 0.0 ang
  inputfile: molecule.dump
  outputfile: molecule.StampV4

simulation:
  - mpi_comm_world
  - grid_flavor_full
  - global
  - domain
  - species
  - read_block:
      rebind: { filename: inputfile }
      body: [ read_dump_molecule ]
  - reduce_species
  - simple_cost_model: { ccost: 1.0 , pdens: 4.0 , pdens2:0.0 , pdens3:0.003 }
  - load_balance_rcb
  - migrate_cell_particles
  - simulation_thermodynamic_state
  - print_thermodynamic_state
  - write_output_file:
      rebind: { filename: outputfile }
      body:
        - write_stamp_v4:
            gen_user_input: true

