configuration:
  physics:
    units:
      length: angstrom
      mass: Dalton
      time: picosecond
      charge: elementary_charge
      temperature: kelvin
      amount: particle
      luminosity: candela
      angle: radian
      energy: joule
  logging:
    debug: false
  profiling:
    summary: false

grid_flavor: grid_flavor_multimat

species:
  - Ta:
     z: 73
     mass: 180.948 Da
     charge: 0.0 e-
  
init_parameters:
  - kim_init:
      kim_model_name: "EAM_Dynamo_RaveloGermannGuerrero_2013Ta1_Ta__MO_816821594689_001"

init_epilog:
  init_parameters

compute_force:
  - kim_force

input_data:
  - domain:
      cell_size: 3.3 ang
      grid_dims: [10,10,10]
      bounds: [[0 ang ,0 ang,0 ang],[33.0 ang, 33.0 ang, 33.0 ang]]
      xform: [[1.,0.,0.],[0.,1.,0.],[0.,0.,1.]]
      periodic: [true,true,true]
      expandable: false
  - init_rcb_grid
  - lattice:
      structure: BCC
      types: [ Ta , Ta]
      size: [ 3.3 ang , 3.3 ang , 3.3 ang ]
      shift: [0.1 ang, 0.1 ang, 0.1 ang]
  - gaussian_noise_r: { sigma: 0.2 ang }

dump_data:
  - timestep_file: "xyz_datas/test_%09d.xyz"
  - write_xyz:
      fields: [ "id" , "force"]
       
global:
  simulation_end_iteration: 100
  simulation_log_frequency: 1
  simulation_dump_thermo_frequency: 1
  simulation_dump_frequency: -1
  rcut_inc: 1.0 ang
  dt: 0.001 ps
  force_flush_file: true
