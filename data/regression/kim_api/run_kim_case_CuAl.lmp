# 3d Lennard-Jones melt

units        metal
timestep     0.001

read_data    dir.datas/CuAl_disturbed.data
  
pair_style  kim EAM_Dynamo_CaiYe_1996_AlCu__MO_942551040047_006
pair_coeff  * * Al Cu

thermo       10
thermo_style custom step time atoms etotal ke pe temp 

variable  peat equal pe/atoms
variable  keat equal ke/atoms
variable  etotalat equal etotal/atoms
variable  T equal temp
variable  nats equal atoms
variable  s equal step
variable  t equal time
        
fix 2 all print 1 "${s} ${t} ${nats} ${etotalat} ${keat} ${peat} ${T}" file dir.thermos/thermo_lammps_CuAl.csv screen no

neighbor     1.0 bin
neigh_modify delay 0 every 1 check yes

fix          1 all nve
dump         d_1 all custom 10 dir.dumps/dump_lammps_CuAl_*.dump id type x y z fx fy fz
run          1000
