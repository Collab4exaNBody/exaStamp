# enable-if-EXASTAMP_BUILD_LCHBOP
includes: []

## Careful : order is important
configuration:
  +plugins:
    - microStampLCHBOP
  logging:
    parallel: false
    profiling: false
    debug: false
#  debug:
#    filter: [ ".*\\.update_force_energy_from_ghost" , ".*\\.ghost_comm_scheme" ]
  profiling:
    operator: false
    operator_exectime: false
    operator_summary: true
  debug:
    plugins: false
    config: false
    graph: true
    graph_lod: 0

global:
  dt: 1.0e-4 ps
  rcut_max: 8.4 ang
  rcut_inc: 1.0 ang    # additional distance so that we don't have to rebuild neighbor list each time step
  ghost_dist: 8.4 ang 
  timestep: 0
  simulation_end_iteration: 10000
  simulation_log_frequency: 100
  simulation_dump_frequency: 100000
#  simulation_end_iteration: 1000
#  simulation_log_frequency: 10
#  simulation_dump_frequency: 10000
  init_temperature: 0 K
#  internal_units: true

update_particle_neighbors: nop

dump_data_if_triggered:
  condition: trigger_dump_data
  body:
#    - cleanup_before_dump
    - dump_data

final_dump:
    - cleanup_before_dump
    - dump_data_stamp_v3

#cleanup_before_dump: nop

# atoms descriptions
species:
  - C:
     z: 12
     mass: 12.0107 Da
     charge: 0.0 e-
  - H:
     z: 1
     mass: 1.00794 Da
     charge: -0.4680 e-

