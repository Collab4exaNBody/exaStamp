# enable-if-XSTAMP_BUILD_microStampLCHBOP

## Careful : order is important
configuration:
  +plugins:
    - microStampLCHBOP
  logging:
    parallel: false
    profiling: false
    debug: false
#  debug:
#    filter: [ ".*\\.update_force_energy_from_ghost" , ".*\\.ghost_comm_scheme" ]
  profiling:
    operator: false
    operator_exectime: false
    operator_summary: true
  debug:
    plugins: false
    config: false
    graph: true
    graph_lod: 0

global:
  dt: 1.0e-4 ps
  rcut_max: 8.4 ang
  rcut_inc: 1.0 ang   # additional distance so that we don't have to rebuild neighbor list each time step
  ghost_dist: 8.4 ang 
  timestep: 0
  simulation_end_iteration: 4000
  simulation_log_frequency: 100
  simulation_dump_frequency: 100000
  init_temperature: 300 K
  pbc_adjust_xform: true
#  internal_units: true

update_particle_neighbors: nop

# atoms descriptions
species:
  - C:
     z: 12
     mass: 12.0107 Da
     charge: 0.0 e-
  - H:
     z: 1
     mass: 1.00794 Da
     charge: -0.4680 e-

LCHBOP_inits:
   flag_vmr: true
   NPT: false
#   parameters
#   nbclist
#   LCHBOP_rc_perf         : [8e-10, 1.2e-10] 
#   LCHBOP_rc: 8e-10 ang

grid_flavor: grid_flavor_full

input_data:
  - read_xyz_file:
#     bounds_mode: DOMAIN     # input in .msp file (bounds)
     bounds_mode: FILE       # read from file
#     bounds_mode: COMPUTED   # computed from atomic positions
     file: Grn1008_test.xyz
#  - replicate_domain: [ 4 , 4 , 1 ]
  - LCHBOP_inits

domain:
#   periodic: [false,false,false]
   periodic: [true,true,false]
#  grid_dims: [1,1,1]
#  bounds: [ [0., 0., 0.] , [ 30.994289180000003, 30.994289180000003, 30.994289180000003 ] ]
#  bounds: [ [0., 0., 0.] , [ 13.283266791429, 13.283266791429, 13.283266791429 ] ]
   cell_size: 25.0 ang
#   cell_size: 2.2 ang
#   cell_size: 2.21387779858 ang
#   cell_size: 2.2138777985714286 ang

dump_data:
#  - write_vtk: {is_binary: false}

init_rcut_max: nbh_dist

+parallel_update_particles:
  - cell_owner_rank
  - LCHBOP_InitEF        # change for less updates

compute_force:
  - LCHBOP_EF
  - update_force_energy_from_ghost

#numerical_scheme_verlet: numerical_scheme_verlet_macro(compute_force_and_add_forces)

preinit_rcut_max:
  profiling: false
  rebind: { grid: null_grid, chunk_neighbors: null_neighbors, domain: empty_domain }
  body:
    - domain:
        cell_size: 0.0 ang
        grid_dims: [ 0 , 0 , 0 ]
    - nbh_dist

