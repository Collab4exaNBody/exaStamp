grid_flavor: grid_flavor_full

species:
  - Cu:
      mass: 63.546
      z: 29
      charge: 0 e-
  
langevin_thermostat:
  T: 300. K
  gamma: 0.1 ps^-1

init_parameters:
  - species
  - pace_init:
      parameters:
        nspecies: 1
        coef: "Cu-PBE-core-rep.ace"
        algorithm: "recursive"
    
compute_force:
  - pace_force

