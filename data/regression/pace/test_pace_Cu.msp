input_data:
  - read_xyz_file_with_xform:
      file: Cu_disturbed.xyz        
      pbc_adjust_xform: true

domain:
  cell_size: 7.230 ang
  periodic: [true,true,true]
  expandable: false

dump_data: nop
  # - timestep_file: "xyz_datas/test_%09d.xyz"
  # - write_xyz:
  #     fields: [ "id" , "force"]
  #     units: { force: "eV/ang" }
       
global:
  simulation_end_iteration: 100
  simulation_log_frequency: 1
  simulation_dump_thermo_frequency: 1
  simulation_dump_frequency: 1
  rcut_inc: 0.3 ang
  dt: 0.001 ps
  force_flush_file: true
