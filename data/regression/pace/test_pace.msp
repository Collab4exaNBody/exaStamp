grid_flavor: grid_flavor_full

species:
  - Cu:
      mass: 63.546
      z: 29
      charge: 0 e-
  
langevin_thermostat:
  T: 300. K
  gamma: 0.1 ps^-1

pace_force:
  parameters:
    nspecies: 1
    coef: "Cu-PBE-core-rep.ace"
#    algorithm: "product"
#    algorithm: "recursive"
#    chunksize: 2048

    
compute_force:
  - pace_force
  - langevin_thermostat

input_data:
  - read_xyz_file_with_xform:
      file: Cu_disturbed.xyz      
      pbc_adjust_xform: true
  # - bulk_lattice:
  #     structure: CUSTOM
  #     np: 4
  #     types: [ Cu, Cu, Cu, Cu]
  #     positions: [ [0.25,0.25,0.25], [0.75,0.75,0.75] ]
  #     size: [ 3.615 ang , 3.615 ang , 3.615 ang ]
  #     repeat: [ 10, 10, 10 ]
  #     noise: 0.1 ang

domain:
  cell_size: 5.6 ang
  periodic: [true,true,true]
  expandable: false

global:
  simulation_end_iteration: 20
  simulation_log_frequency: 5
  simulation_dump_thermo_frequency: -1
  simulation_dump_frequency: -1
  rcut_inc: 1.0 ang
  dt: 2.0e-3 ps
  init_temperature: 5. K
