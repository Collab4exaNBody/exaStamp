grid_flavor: grid_flavor_full

species:
  - C:
     z: 12
     mass: 12.0107 Da
     charge: 0.0 e-
  - H:
     z: 1
     mass: 1.00794 Da
     charge: -0.4680 e-
  
langevin_thermostat:
  T: 800. K
  gamma: 0.1 ps^-1
  
init_parameters:
  - species
  - pace_init:
      parameters:
        coef: "CH_ACE_Willman_JCP2024.yace"
        algorithm: "recursive"
        
compute_force:
   - pace_force

input_data:
  - read_xyz_file_with_xform:
      file: CH216.xyz
      pbc_adjust_xform: true
  - replicate_domain: [2, 2, 2]
  
domain:
  cell_size: 4.0 ang
  periodic: [true,true,true]
  expandable: false

dump_data:
  - timestep_file: "xyz_datas/test_%09d.xyz"
  - write_xyz:
      fields: [ "id" , "force"]
      units: { force: "eV/ang" }
       
global:
  simulation_end_iteration: 2000
  simulation_log_frequency: 5
  simulation_dump_thermo_frequency: 5
  simulation_dump_frequency: 10
  rcut_inc: 0.3 ang
  dt: 0.001 ps
  force_flush_file: true
