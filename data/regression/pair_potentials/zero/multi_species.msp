grid_flavor: grid_flavor_multimat

species:
  - Zn: { mass: 65.38 Da , z: 30 , charge: 0.0 e- }
  - Cu: { mass: 63.546 Da , z: 29 , charge: 0.0 e- }

zero_multi_force:
  rcut: 8. ang
  common_parameters: nop
  parameters:
    - { type_a: Zn , type_b: Zn , rcut: 6.10 ang , parameters: nop}
    - { type_a: Cu , type_b: Zn , rcut: 5.89 ang , parameters: nop}
  
compute_force: zero_multi_force
      
input_data:
  - particle_types:
      particle_type_map: { Cu: 0, Zn: 1 }
  - particle_type_add_properties:
      Zn: { mass: 65.38 Da , z: 30 , charge: 0.0 e- }
      Cu: { mass: 63.546 Da , z: 29 , charge: 0.0 e- }
  - domain:
      cell_size: 8 ang
      grid_dims: [5,5,5]
      bounds: [[0 ang ,0 ang,0 ang],[40. ang, 40. ang, 40. ang]]
      xform: [[1.,0.,0.],[0.,1.,0.],[0.,0.,1.]]
      periodic: [true,true,true]
      expandable: false
  - init_rcb_grid
  - lattice:
      structure: FCC
      types: [ Cu, Zn, Cu, Zn ]
      size: [ 4.0 ang , 4.0 ang , 4.0 ang ]
  - gaussian_noise_r: { sigma: 0.1 ang }
  - gaussian_noise_v: { sigma: 50. m/s }  
  
global:
  simulation_end_iteration: 10
  simulation_log_frequency: 10
  simulation_dump_thermo_frequency: -1
  simulation_dump_frequency: -1
  rcut_inc: 1.0 ang
  dt: 1.0e-3 ps

xxx_simulation_epilog:
  - check_values:
      file: check_values.dat
      pos_threshold: 5.e-10
      acc_threshold: 5.e-10
      vel_threshold: 5.e-10
