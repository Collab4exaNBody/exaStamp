meam_e0     = [4.93474273599999995322e-19] # [double]
meam_A      = [1.000E+00] # [double]
meam_r0     = [3.44E-10]  # [double]
meam_alpha  = [6.200E+00] # [double]
meam_delta  = [0.000E+00] # [double]
