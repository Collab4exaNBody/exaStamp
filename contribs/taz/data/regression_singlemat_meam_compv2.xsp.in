### exaStamp input format ------------------------------------------------------
###
###


# code version for compatibility 
# [int]

version = 0



# SIMULATION PARAMETERS -------------------------------------------------------
#
# mode                   : simulation mode (what we are going to simulate) 
# ensemble               : statistical ensemble 
# scheme                 : integration scheme used
# friction_langevin      : friction parameter for langevin scheme -- in seconds^(-1)
# temperature_thermostat : target temperature for thermostats -- in Kelvins
#

mode                   = single_spec_atom       # [single_spec_atom] 
scheme                 = newton_verlet_velocity # [newton_verlet_leapfrog, newton_verlet_velocity, langevin_splitting] 
friction_langevin      = 1.00E+13               # [positive double]
temperature_thermostat = 500                    # [positive double]


# [TMP] DEVELOPERS PARAMETERS -------------------------------------------------
#
# symmetrization *       : wether or not symmetrize computation (less computation but more tests) 
# decoupage *            : number of mpi proc in each dimension
# max_threads_per_node * : max number of threads per node structure. If negative, default is used
# bind_threads           : bind or not threads to cpu core. Hwloc is required to use this option
# neighbours_method      : specifies which method of constructing neighbour lists is used. (default: linked cell method)
# radius_verlet (meters) : value added to the cut-off radius when verlet lists are used
#
# NOTE : for fields marked with '*', if value = XSP_ENV, values are set from environment 
#        variables (XSP_SYMMETRIZE, XSP_MAX_NUM_THREADS,
#        XSP_NPX, XSP_NPY and XSP_NPZ)
#

symmetrization       = false         # [true, false]
decoupage            = [1, 1, 1]     # [positive int]
max_threads_per_node = 4             # [positive int] 
bind_threads         = false         # [true, false]
neighbours_method    = verlet_list   # [linked_cell, verlet_list]
raduis_verlet        = 1.0E-10       # [positive double]


# AMR
amr_octree_depth      = 1                # [positive int]
amr_criterion         = 50               # [positive int]


# DOMAIN PARAMETERS -----------------------------------------------------------
#
# boundary_conditions : boundary conditions
# decomposition *     : domain decomposition type
# dynamic_balancing * : dynamic balancing method
# origin              : origin of the domain -- in meters
# extension           : extension of the domain -- in meters
# expand_free_limits  : to stop the simulation if a particle is about to cross a 'free' boundary; dump produced will have a larger domain
# expand_factor       : expand factor for domain in dump in case of expansion
#
# NOTE (1) : if one of the components in extension is negative, extension will
# be set to n_cells*lattice_parameter (see below)
#
# NOTE (2) : for fields marked with '*', if value = XSP_ENV, values are set from 
#            environment variables (XSP_DECOMPOSITION and XSP_LB_METHOD)
#

boundary_conditions = [periodic, periodic, periodic]    # [free, periodic, wall, free_wall, wall_free] (x3)
decomposition       = rectilinear                       # [rectilinear, any]
dynamic_balancing   = none                              # [none, block, random, coordinate_bisection, inertial_bisection, space_filling_curve, graph]
origin              = [ 0.00E+00,  0.00E+00,  0.00E+00] # [double, scientific format] (x3)
extension           = [ -.00E+00,  -.00E+00,  -.00E+00] # [positive double, scientific format] (x3)
expand_free_limits  = false                             # [true, false]
expand_factor       = 1.50                              # [positive double, > 1]





# TIME PARAMETERS -------------------------------------------------------------
#
# number_of_steps * : number of steps in the simulation
# delta             : time interval -- in seconds
# log_rate *        : log rate
# balance_rate *    : balance rate
# output_rate *     : output rate 
# output_type *     : output format 
# output_dir *      : output directory
# dump_rate *       : dump rate 
# dump_type *       : dump format 
# dump_dir *        : dump_directory
# log_workload *    : write (or not) a log file with number of particles per domain
# dir             : directory for dump/output 
#
# NOTE : for fields marked with '*', if value = XSP_ENV, values are set from 
#        environment variables (XSP_N_STEPS, XSP_LOG_RATE, XSP_LB_RATE, 
#        XSP_OUT_RATE, XSP_OUT_TYPE, XSP_OUT_DIR, XSP_DUMP_RATE, XSP_DUMP_TYPE,
#        XSP_DUMP_DIR and XSP_PART_LOG)
#

number_of_steps = 10           # [positive int]
delta           = 1.0E-15       # [positive double, scientific format]
log_rate        = 1            # [positive int]
balance_rate    = -1            # [positive int]
output_rate     = -1            # [positive int]
output_type     = dat           # [dat, vtk, hercule]
dump_rate       = -1            # [positive int]
dump_type       = legacy        # [legacy, hercule]
log_workload    = false         # [true, false]
dir             = /home/thierry/build/exaStamp-master/regression/single-mat-meam             # [string]
check_values    = true          # [true, false]
check_epsilon   = 1.e-13
check_iteration = 10
check_file      = ${EXASTAMP_TEST_DATA_DIR}/meam.dat



# OPTIONAL TIMERS -------------------------------------------------------------
#
# Chrono            : Indicates if more accurate timers are used
# Chrono_potential  : Indicates if the potential calculation is timed
# Chrono_neighbours : Indicates if construction of neighbour lists is timed
# Chrono_ghost      : Indicates if the update of ghost cells is timed
# Chrono_refine     : Indicates if the refinement functions is timed
# Chrono_generic    : Currently, do nothing
#

Chrono            = false  # [true, false]
Chrono_potential  = false  # [true, false]
Chrono_neighbours = false  # [true, false]
Chrono_ghost      = false  # [true, false]
Chrono_refine     = false  # [true, false]
Chrono_generic    = false  # [true, false] 





# PARTICLES TYPES -------------------------------------------------------------
#

# Atom names                  [string, no space]
# Atom atomic numbers         [int]
# Atom masses -- in kilograms [positive double] 
# Atom charges -- in coulombs [double]
#

atom_names   = [          Tin]
atom_z       = [           50]
atom_masses  = [197.1508269E-27]
atom_charges = [            0]





